<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background2"
    tools:context=".MainActivity">

    //Logo Image
    <ImageView
        android:layout_width="170dp"
        android:layout_height="131dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="239dp"
        android:background="@drawable/homes_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="71dp"
        android:layout_height="29dp"
        android:layout_marginStart="267dp"
        android:layout_marginTop="409dp"
        android:layout_marginEnd="73dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_marginStart="239dp"
        android:layout_marginTop="471dp"
        android:layout_marginEnd="64dp"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="56dp"
        android:text="FORGOT PASSWORD"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="186dp"
        android:layout_height="31dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="610dp"
        android:layout_marginEnd="74dp"
        android:text="CONTINUE AS GUEST"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/loginBTN"
        android:layout_width="54dp"
        android:layout_height="35dp"
        android:layout_marginStart="347dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_login_24" />

    <ImageButton
        android:id="@+id/registerBTN"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_marginStart="343dp"
        android:layout_marginTop="471dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_app_registration_24" />

    <ImageButton
        android:id="@+id/forgotPass_BTN"
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginStart="347dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_email_24" />

    <ImageButton
        android:id="@+id/guestBTN"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="603dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_device_unknown_24" />


</androidx.constraintlayout.widget.ConstraintLayout>